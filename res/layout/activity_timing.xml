<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="36dp"
    android:gravity="center_vertical"
    android:orientation="vertical"
    tools:context=".TimingActivity" >

    <TextView
        android:id="@+id/timing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:textSize="72sp" />

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/FLAT_CARROT"
        android:gravity="center"
        android:padding="5dp"
        android:textIsSelectable="false"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/remark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/FLAT_CARROT"
            android:gravity="center"
            android:text="备注"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/remark_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/FLAT_CARROT"
            android:gravity="left"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="备注"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/sounds"
            android:layout_width="0dp"
            android:layout_height="40sp"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:background="@null"
            android:contentDescription="@string/content_image_sounds"
            android:onClick="soundsTroggle"
            android:paddingRight="20dp"
            android:scaleType="fitCenter"
            android:src="@drawable/sounds_on" />

        <ImageButton
            android:id="@+id/giveup"
            android:layout_width="0dp"
            android:layout_height="40sp"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:background="@null"
            android:contentDescription="@string/content_image_giveup"
            android:onClick="encourage"
            android:paddingLeft="20dp"
            android:scaleType="fitCenter"
            android:src="@drawable/delete" />
    </LinearLayout>

</LinearLayout>